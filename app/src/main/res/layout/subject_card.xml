<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="17dp"
    android:background="#D8BEF8"
    >



    <TextView
        android:id="@+id/subjectNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Civics"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:translationZ="200dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintBottom_toBottomOf="@+id/subjectStartButton"
        app:layout_constraintEnd_toEndOf="@+id/subjectStartButton"
        app:layout_constraintStart_toStartOf="@+id/subjectStartButton"
        app:layout_constraintTop_toTopOf="@+id/subjectStartButton" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Start"
        android:textColor="@color/black"
        android:translationZ="200dp"

        android:background="@drawable/start_bg"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/subjectStartButton"
        app:layout_constraintStart_toStartOf="@+id/subjectStartButton"
        app:layout_constraintTop_toBottomOf="@+id/subjectNameTextView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/subjectStartButton"
        android:layout_width="160dp"
        android:layout_height="170dp"
        app:cardCornerRadius="12dp"
        android:outlineAmbientShadowColor="#D8BEF8"
        android:outlineSpotShadowColor="#D8BEF8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/itemView"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:src="@drawable/red_bg" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>